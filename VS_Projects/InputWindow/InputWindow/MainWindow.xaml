<Window x:Class="InputWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InputWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="110" Width="420">
    <Grid>
        <Button x:Name="OkButton" Content="OK" HorizontalAlignment="Left" Margin="285,0,0,0" VerticalAlignment="Center" Width="60"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Center" Margin="340,0,0,0" VerticalAlignment="Center" Width="60"/>
        <TextBox Margin="0,10,0,60" TextWrapping="Wrap" Text="TextBox" Width="380" FontSize="14"/>

    </Grid>
</Window>
